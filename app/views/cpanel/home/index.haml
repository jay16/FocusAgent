.row
  %h1 概况

.row
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %td{style: "width:15%;"} 参数
        %td 信息
    %tbody
      %tr
        %td platform
        %td= ENV["OS_PLATFORM"]
      %tr
        %td hostname
        %td= ENV["OS_HOSTNAME"]
      %tr
        %td sysdate
        %td= Time.now.strftime("%Y/%m/%d %H:%M:%S")
      - startup = Time.at(ENV["DATE_STARTUP"].to_i)
      %tr
        %td startup 
        %td= startup.strftime("%Y/%m/%d %H:%M:%S") 
      %tr
        %td root
        %td= ENV["APP_ROOT_PATH"]

  - process_info_datas = agent_process_info
  - usefull = [0,1,3,4,8,9]
  %table.table.table-hover.table-bordered
    %thead
      %tr
        - process_info_datas.shift.each_with_index do |item, index|
          - next unless usefull.include?(index)
          %td= item
        
    %tbody
      - process_info_datas.each do |row|
        - if row.size > 2
          %tr
            - row.each_with_index do |item, index|
              - next unless usefull.include?(index)
              %td= item 
          %tr
            %td
            %td{colspan: "5"}=row.last
        - else
          %tr
            %td= row[0]
            %td{colspan: "5"}=row[1]
